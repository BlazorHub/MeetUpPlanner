@using MeetUpPlanner.Shared
<div class="jumbotron">
    <h6 class="text-muted">@CalendarItem.LevelDescription - @CalendarItem.Tempo</h6>
    <h3>@CalendarItem.GetStartDateAsString() - @CalendarItem.Title</h3>
    @if (!String.IsNullOrEmpty(CalendarItem.Link))
    {
        <small><a href="@CalendarItem.Link" target="_blank">@(String.IsNullOrEmpty(CalendarItem.LinkTitle) ? "Weitere Info..." : CalendarItem.LinkTitle)</a></small>
    }
    <p>
        @((MarkupString)CalendarItem.Summary)
    </p>
    <p>
        <small>Dabei (@CalendarItem.ParticipantCounter von @CalendarItem.MaxRegistrationsCount): <b>@CalendarItem.HostDisplayName</b>@CalendarItem.ParticipantsDisplay</small>
    </p>
</div>

@code {
    [Parameter]
    public ExtendedCalendarItem CalendarItem { get; set; } = new ExtendedCalendarItem();

}
